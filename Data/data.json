      "behaviorTree": {
        "type": "composite",
        "name": "Selector",
        "//": "Main player logic. Order of execution: Win > Lose > Interact > Move.",
        "children": [
          {
            "type": "composite",
            "name": "Sequence",
            "//": "Win condition: Touch the Goal",
            "children": [
              {
                "type": "condition",
                "name": "OnHit",
                "tags": [
                  "Goal"
                ]
              },
              {
                "type": "action",
                "name": "Win"
              }
            ]
          },
          {
            "type": "composite",
            "name": "Sequence",
            "//": "Lose condition: Hit an enemy from the side/below",
            "children": [
              {
                "type": "condition",
                "name": "OnHit",
                "tags": [
                  "Enemy"
                ]
              },
              {
                "type": "action",
                "name": "Lose"
              }
            ]
          },
          {
            "type": "composite",
            "name": "Sequence",
            "//": "Interaction: Stomp an enemy",
            "children": [
              {
                "type": "condition",
                "name": "OnStomp",
                "tags": [
                  "Enemy"
                ],
                "outputTarget": "{e_hitTarget}"
              },
              {
                "type": "action",
                "name": "DestroyTarget",
                "target": "{e_hitTarget}"
              },
              {
                "type": "action",
                "name": "IncreaseVariable",
                "variable": "{g_i_score}",
                "amount": 10
              }
            ]
          },
          {
            "type": "composite",
            "name": "Sequence",
            "//": "Interaction: Hit a question block from below",
            "children": [
              {
                "type": "condition",
                "name": "OnHeadHit",
                "tags": [
                  "QuestionBlock"
                ],
                "outputTarget": "{e_hitTarget}"
              },
              {
                "type": "action",
                "name": "IncreaseVariable",
                "variable": "{g_i_score}",
                "amount": 10
              },
              {
                "type": "action",
                "name": "DestroyTarget",
                "target": "{e_hitTarget}"
              }
            ]
          },
          {
            "type": "composite",
            "name": "Sequence",
            "//": "Interaction: Break a brick block from below",
            "children": [
              {
                "type": "condition",
                "name": "OnHeadHit",
                "tags": [
                  "BrickBlock"
                ],
                "outputTarget": "{e_hitTarget}"
              },
              {
                "type": "action",
                "name": "DestroyTarget",
                "target": "{e_hitTarget}"
              }
            ]
          },
          {
            "type": "composite",
            "name": "Selector",
            "//": "Handle movement and jumping",
            "children": [
              {
                "type": "composite",
                "name": "Sequence",
                "//": "Jumping logic",
                "children": [
                  {
                    "type": "condition",
                    "name": "IsButtonDown",
                    "buttonId": "Jump"
                  },
                  {
                    "type": "condition",
                    "name": "IsOnGround"
                  },
                  {
                    "type": "action",
                    "name": "Jump",
                    "jumpForce": "{f_jumpForce}"
                  }
                ]
              },
              {
                "type": "action",
                "name": "MoveByController",
                "//": "Horizontal movement",
                "controllerId": "Movement",
                "moveSpeed": "{f_moveSpeed}"
              }
            ]
          }
        ]
      }
    },
